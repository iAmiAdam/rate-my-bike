<div id="sidebar-wrapper">
	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="navbar-collapse-1">
    	<span class="sr-only">Toggle navigation</span>
    	<span class="icon-bar"></span>
    	<span class="icon-bar"></span>
    	<span class="icon-bar"></span>
	</button>
	<% if !signed_in? then %>
		<ul class="sidebar-nav" id="navbar-collapse-1">
			<li><%= link_to '<i class="fa fa-sign-in fa-2x"></i>'.html_safe, root_path %></li>
			<li><%= link_to '<i class="fa fa-align-justify fa-2x"></i>'.html_safe, signup_path %></li>
		</ul>
	<% else %>
		<ul class="sidebar-nav" id="navbar-collapse-1">
			<li><%= link_to '<i class="fa fa-plus fa-2x"></i>'.html_safe, root_path %></li>
			<li><%= link_to '<i class="fa fa-bell fa-2x"></i>'.html_safe, root_path %></li>
			<li><%= link_to '<i class="fa fa-user fa-2x"></i>'.html_safe, current_user.username %></li>
			<li><%= link_to '<i class="fa fa-users fa-2x"></i>'.html_safe, root_path %></li>
			<li><%= link_to '<i class="fa fa-signal fa-2x"></i>'.html_safe, "/#{current_user.username}" %></li>
			<li><%= link_to '<i class="fa fa-cog fa-2x"></i>'.html_safe, 'settings/account' %></li>
			<li><%= link_to '<i class="fa fa-sign-out fa-2x"></i>'.html_safe, signout_path %></li>
		</ul>
	<% end %>
</div>