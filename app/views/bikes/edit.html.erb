<% provide(:title, "Edit your bike") %>

<div class="row">
	<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-3 col-md-offset-7 col-lg-3 col-lg-offset-7">
		<h1>Add your bike</h1>
	</div>
</div>

<div class="row">
	<div class="hidden-xs hidden-sm col-md-5 col-md-offset-2 col-lg-5 col-lg-offset-2">
		<div class="well">
			Example Space
		</div>
	</div>

	<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-3 col-md-offset-0 col-lg-3">
		<div class="well">
			<%= form_for(@bike) do |f| %>
				<%= render 'newForm', f: f %>
				<%= f.submit "Add Bike", class: "btn btn-large btn-primary" %>
			<% end %>
		</div>
	</div>
</div>