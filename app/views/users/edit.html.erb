<% provide(:title, "Update information") %>

<div class="row">
	<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-2 col-lg-offset-5">
		<h1>Update account</h1>
	</div>
</div>

<div class="row">
	<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-2 col-lg-offset-5">
		<div class="well">
		<%= form_for (@user) do |f| %>
			<%= render 'newForm', f: f %>
			<%= f.submit "Update Info", class: "btn btn-large btn-primary" %>
		<% end %>
		</div>

		

		<div class="well">
			<div class="container-fluid">
			<%= link_to content_tag('i', '', class: 'fa fa-trash-o'), current_user.username, data: { confirm: "Are you sure you want to delete your account?" }, method: :delete %> Delete my Account
			</div>
		</div>
	</div>
</div>