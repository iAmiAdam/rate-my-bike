<% provide(:title, "Approve Bikes") %>

<div class="row">
	<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-3 col-md-offset-7 col-lg-8 col-lg-offset-2">
		<h1>Approve new bikes</h1>
	</div>
</div>

<div class="row">
	<div class="col-xs-10 col-sm-10 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
		<div class="well">
			<% @bikes.each do |bike| %>
				<%= render partial: bike, object: bike %>
				<div class="container-fluid">
					<%= button_to "Approve", "/approve/#{bike.id}", class: "btn btn-success" %>
					<%= button_to "Delete", "/approve/#{bike.id}", class: "btn btn-danger" %>
				</div>
				<% end %>
		</div>
	</div>
</div>